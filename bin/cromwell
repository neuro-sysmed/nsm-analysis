#!/usr/bin/env python3

import argparse
from subprocess import run
import shlex
import glob

CROMWELL_JAR = "cromwell-{}.jar"

jars_location = ["/home/brugger/software/jars/",
                 "/usr/local/jars/",
                 "/cluster/jars/"]





def find_jar(jar_regex:str=JAR, jars_locations:list=jar_locations) -> str:
    for jar_location in jar_locations:
        jars = glob.glob(jar_location +jar_regex.format("*"))
        if jars != []:
            jars = sorted(jars)
            global JAR
            JAR = jars[-1]
            return
#    jar_regex = 
    print(f"Could not find {jar_regex.format('*')}")
    sys.exit(10)




def main():
    parser = argparse.ArgumentParser(description="cromwell wrapper script")
    commands = ["init", "version", "utils"]  # "release",
    parser.add_argument('--java-options', action='append', default=[])
    parser.add_argument('command', nargs="+")

    args, other_args = parser.parse_known_args()

    args.java_options = " ".join(args.java_options)
    args.command = " ".join(args.command)

    run(shlex.split(f"java {args.java_options} -jar {CROMWELL_JAR} {args.command} {' '.join(other_args)}"))




if __name__ == "__main__":
    main()
